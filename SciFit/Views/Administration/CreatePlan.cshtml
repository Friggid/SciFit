@model SciFit.Models.PlanTemplateModel
@section styles{
    <link rel="Stylesheet" href="@Href(" ~/Content/Site.css")" />
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center" style="float: none; margin: auto">
            @using (Html.BeginForm("CreatePlanCreate", "Administration"))
            {
                <h4>Create excercise</h4>
                <hr />

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Name,
                    new
                    {
                        @class = "form-control input-sm",
                        placeholder = "Name",
                        type = "text",
                        style = "margin:auto; text-align:center"
                    })
                <hr />

                @Html.ValidationMessageFor(m => m.Reps, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Reps,
                    new
                    {
                        @class = "form-control input-sm",
                        placeholder = "Reps",
                        type = "text",
                        style = "margin:auto; text-align:center"
                    })
                <hr />

                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Image,
                    new
                    {
                        @class = "form-control input-sm",
                        placeholder = "Image",
                        type = "text",
                        style = "margin:auto; text-align:center"
                    })
                <hr />

                @Html.ValidationMessageFor(m => m.Instructions, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Instructions,
                    new
                    {
                        @class = "form-control input-sm",
                        placeholder = "Instructions",
                        type = "text",
                        style = "margin:auto; text-align:center"
                    })
                <hr />

                @Html.ValidationMessageFor(m => m.Level, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Level,
                    new
                    {
                        @class = "form-control input-sm",
                        placeholder = "Level",
                        type = "number",
                        style = "margin:auto; text-align:center"
                    })
                <hr />

                @Html.HiddenFor(userModel => userModel.Id)

                <div class="row" style="display: flex;justify-content: center">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success" style="margin: 0 auto;">Create</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Cancel", "CreatePlanCancel", "Administration",
                            new {id = Model.Id, pass = ViewBag.Pass},
                            new {@class = "btn btn-danger", style = "margin: 0 auto;"})
                    </div>
                </div>

                
            }
        </div>

    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}