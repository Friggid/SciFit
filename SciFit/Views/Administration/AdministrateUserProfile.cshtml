@model SciFit.Models.UserModel

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center" style="float: none; margin: auto">
            @using (Html.BeginForm("AdministrateUserProfileSave", "Administration"))
            {
                <h4>Edit profile</h4>
                <hr />
                <div style="padding-bottom: 1em">
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <p>Username</p>
                    @Html.TextBoxFor(m => m.UserName,
                        new
                        {
                            @class = "form-control input-sm",
                            placeholder = "Username",
                            type = "text",
                            style = "margin:auto; text-align:center"
                        })
                <hr />
                <div style="padding-bottom: 1em">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <p>Email</p>
                    @Html.TextBoxFor(m => m.Email,
                        new
                        {
                            @class = "form-control input-sm",
                            placeholder = "Email@gmail.com",
                            type = "email",
                            style = "margin:auto; text-align:center"
                        })
                <hr />
                <div class="form-group">
                    <label for="Age">Role</label>
                    <select class="form-control" id="RoleId" name="RoleId" style="margin: auto">
                        <option selected="selected" value="1">User</option>
                        <option value="2">Administrator</option>
                    </select>
                </div>
                <hr />
                <div class="form-group">
                    <label for="Age">Age</label>
                    <select class="form-control" id="Age" name="Age" style="margin: auto">
                        <option>&lt;18</option>
                        <option>19 - 25</option>
                        <option>&gt;25</option>
                    </select>
                </div>
                <hr />
                <div class="form-group">
                    <label for="Weight">Weight</label>
                    <select class="form-control" id="Weight" name="Weight" style="margin: auto">
                        <option>&lt;60</option>
                        <option>60 - 80</option>
                        <option>80 - 100</option>
                        <option>&gt;100</option>
                    </select>
                </div>
                <hr />
                <div class="form-group">
                    <label for="Difficulty">How much did you train before?</label>
                    <select class="form-control" id="Difficulty" name="Difficulty" style="margin: auto">
                        <option selected="selected">I did not train</option>
                        <option>I trained a little</option>
                        <option>I trained few times a week</option>
                        <option>I trained a lot every week</option>
                    </select>
                </div>
                <hr />
                @Html.HiddenFor(userModel => userModel.Id)
                @Html.HiddenFor(userModel => userModel.Password)
                @Html.HiddenFor(userModel => userModel.Height)

                <div class="row" style="display: flex;justify-content: center">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary" style="min-width: 80px;margin: 0 auto;">Save</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Back to users", "AdminPanel", "Administration",
                            new { @class = "btn btn-danger", style = "margin: 0 auto;" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}