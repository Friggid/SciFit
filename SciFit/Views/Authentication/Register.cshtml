@model SciFit.Models.UserModelMainView
@{
    ViewBag.Title = "Register";
}

@section styles{
    <link rel="Stylesheet" href="@Href("~/Content/Site.css")" />
}
<!--Pulling Awesome Font -->
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="form-registration text-center">
                @using (Html.BeginForm("Register", "Authentication"))
                {
                    <h4>Registration</h4>
                    <hr />
                    <div class="form-group">
                        <div>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName,
                            new
                            {
                                @class = "form-control input-sm",
                                placeholder = "Username",
                                style = "margin:auto; text-align:center"
                            })
                        <hr/>
                        @Html.ValidationMessageFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password,
                            new
                            {
                                @class = "form-control input-sm",
                                placeholder = "Password",
                                type = "password",
                                style = "margin:auto; text-align:center"
                            })
                        <hr/>
                        @Html.ValidationMessageFor(m => m.Email)
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email,
                            new
                            {
                                @class = "form-control input-sm",
                                placeholder = "email@email.com",
                                type = "email",
                                style = "margin:auto; text-align:center"
                            })
                        @*<input type="text" id="email" name="Email" class="form-control input-sm" style="margin: auto" placeholder="User@mail.com" />*@
                        <hr/>
                        <button type="submit" class="btn btn-primary">Continue</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}