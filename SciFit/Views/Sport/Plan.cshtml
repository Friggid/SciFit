@model SciFit.Models.SportNutritionPlanModel
@{
    ViewBag.Title = "Sport";
}

<div class="container">
    <div class="center-block">
        <div class="col-lg-12 col-sm-12">
            <div class="card hovercard">
                <div class="card-background">
                    <img alt="" src="http://codegena.com/wp-content/uploads/2015/10/Background-Pattern-3.png">
                </div>
                <div class="useravatar">
                    <img alt="" src="https://www.vexels.com/media/users/3/141735/isolated/preview/f1e0f649e711910f0ef8b84742160df7-sporty-joyfull-man-by-vexels.png" style="border: 1px solid gray; padding: 10px">
                    <div>Welcome back: @Model.User.UserName!</div>
                </div>
            </div>

            <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button style="min-height: 5em" type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab">
                        <span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
                        <div style="font-size: 2em"> Sport</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button style="min-height: 5em" type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                        <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>
                        <div style="font-size: 2em"> Eat</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button style="min-height: 5em" type="button" id="calendar" class="btn btn-default" href="#tab3" data-toggle="tab">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        <div style="font-size: 2em"> Calendar</div>
                    </button>
                </div>
            </div>
            <div class="well">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1">
                        <div class="row">
                            @{var id = 0;}
                            @foreach (var item in Model.SportPlan)
                            {
                                if (Model.SportPlan.Count > 2)
                                {
                                    <div class="col-md-4" style="text-align: center">
                                        <div class="thumbnail">
                                            @if (item.ImgContent != null && item.ImgContent.Length > 0)
                                            {
                                                <img src='@Url.Action("LoadImg", "Sport", new {id = item.Id})'>
                                            }
                                            else
                                            {
                                                <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                            }
                                            <div class="caption">
                                                <div>
                                                    <h3>@item.Name</h3>
                                                </div>
                                                <div style="min-height: 50px">
                                                    <p>@item.Instructions</p>
                                                </div>
                                                <div>
                                                    <p>Repetitions: @item.Reps</p>
                                                </div>

                                                <div class="panel-footer row">
                                                    <div class="col-xs-6 text-right">
                                                        <button button-id="@id" id="myBtn" class="myBtn btn btn-info">Instructions</button>
                                                    </div>
                                                    <div class="col-xs-6 text-left">
                                                        @Html.ActionLink("Completed", "UpdatePlan", "Sport", new { sportId = item.Id, lvl = item.Level },
                                                            new
                                                            {
                                                                @class = "btn btn-info"
                                                            })
                                                    </div>
                                                </div>

                                                <!-- The Modal -->
                                                <div modal-id="@id" id="myModal_@id" class="modal col-md-12">
                                                    <!-- Modal content -->
                                                    <div class="modal-content" style="min-height: 300px; min-width: 350px;">
                                                        <span id="span_@id" class="close">&times;</span>
                                                        <iframe id="iframe_@id" style="margin: 0; width: 100%; min-height: 300px" src="//@item.Video?enablejsapi=1" frameborder="0" allowfullscreen></iframe>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (Model.SportPlan.Count == 2)
                                {
                                    <div class="col-md-6" style="text-align: center">
                                        <div class="thumbnail">
                                            @if (item.ImgContent != null && item.ImgContent.Length > 0)
                                            {
                                                <img src='@Url.Action("LoadImg", "Sport", new {id = item.Id})'>
                                            }
                                            else
                                            {
                                                <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                            }
                                            <div class="caption">
                                                <div>
                                                    <h3>@item.Name</h3>
                                                </div>
                                                <div style="min-height: 50px">
                                                    <p>@item.Instructions</p>
                                                </div>
                                                <div>
                                                    <p>Repetitions: @item.Reps</p>
                                                </div>

                                                <div class="panel-footer row">
                                                    <div class="col-xs-6 text-right">
                                                        <button button-id="@id" id="myBtn" class="myBtn btn btn-info">Instructions</button>
                                                    </div>
                                                    <div class="col-xs-6 text-left">
                                                        @Html.ActionLink("Completed", "UpdatePlan", "Sport", new { sportId = item.Id, lvl = item.Level },
                                                            new
                                                            {
                                                                @class = "btn btn-info"
                                                            })
                                                    </div>
                                                </div>

                                                <!-- The Modal -->
                                                <div modal-id="@id" id="myModal_@id" class="modal col-md-12">
                                                    <!-- Modal content -->
                                                    <div class="modal-content" style="min-height: 300px; min-width: 350px;">
                                                        <span id="span_@id" class="close">&times;</span>
                                                        <iframe id="iframe_@id" style="margin: 0; width: 100%; min-height: 300px" src="//@item.Video?enablejsapi=1" frameborder="0" allowfullscreen></iframe>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-12 " style="text-align: center">
                                        <div class="thumbnail">
                                            @if (item.ImgContent != null && item.ImgContent.Length > 0)
                                            {
                                                <img src='@Url.Action("LoadImg", "Sport", new {id = item.Id})'>
                                            }
                                            else
                                            {
                                                <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                            }
                                            <div class="caption">
                                                <div>
                                                    <h3>@item.Name</h3>
                                                </div>
                                                <div style="min-height: 50px">
                                                    <p>@item.Instructions</p>
                                                </div>
                                                <div>
                                                    <p>Repetitions: @item.Reps</p>
                                                </div>

                                                <div class="panel-footer row">
                                                    <div class="col-xs-6 text-right">
                                                        <button button-id="@id" id="myBtn" class="myBtn btn btn-info">Instructions</button>
                                                    </div>
                                                    <div class="col-xs-6 text-left">
                                                        @Html.ActionLink("Completed", "UpdatePlan", "Sport", new { sportId = item.Id, lvl = item.Level },
                                                            new
                                                            {
                                                                @class = "btn btn-info"
                                                            })
                                                    </div>
                                                </div>

                                                <!-- The Modal -->
                                                <div modal-id="@id" id="myModal_@id" class="modal col-md-12">
                                                    <!-- Modal content -->
                                                    <div class="modal-content" style="min-height: 300px; min-width: 350px;">
                                                        <span id="span_@id" class="close">&times;</span>
                                                        <iframe id="iframe_@id" style="margin: 0; width: 100%; min-height: 300px" src="//@item.Video?enablejsapi=1" frameborder="0" allowfullscreen></iframe>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                id++;
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="tab2">
                        <div class="row">
                            @foreach (var item in Model.NutritionPlan)
                            {
                            <div class="col-sm-6 col-md-4" style="text-align: center">
                                <div class="thumbnail">
                                    <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                    <div class="caption">
                                        <h3>@item.Name</h3>
                                        <p>@item.Calories kCal</p>
                                        <p>@item.Weight</p>
                                        <p>@item.Price</p>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="tab3">
                        <div class="row">
                            <div ng-app="myApp" ng-controller="myNgController">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div id="calendar" ui-calendar="uiConfig.calendar" ng-model="eventSources" calendar="myCalendar"></div>
                                    </div>
                                    <div class="col-md-4">
                                        <div ng-show="SelectedEvent" class="alert" style="background-color:#158cba">
                                            <h2 style="margin-top: 0px; color: white"> Selected Event:</h2>
                                            <h3 style="color:white">{{SelectedEvent.title}}</h3>
                                            <p style="color:white">{{SelectedEvent.description}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $('.myBtn').click(function () {
            var id = $(this).attr('button-id');
            var modal = document.getElementById('myModal_' + id);
            var span = document.getElementById('span_' + id);
            var iframe = document.getElementById('iframe_' + id);

            modal.style.display = "flex";
            modal.style.justifyContent = "center";
            modal.style.alignItems = "center";

            span.onclick = function () {
                modal.style.display = "none";
                iframe.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
            }

            window.onclick = function (event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                    iframe.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
                }
            }
        });
    </script>
}

