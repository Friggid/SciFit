@model SciFit.Models.SportNutritionPlanModel
@{
    ViewBag.Title = "Sport";
}
@section styles{
<link rel="Stylesheet" href="@Href(" ~/Content/Plan.css")" />
}
<div class="container">
    <div class="center-block">
        <div class="col-lg-12 col-sm-12">
            <div class="card hovercard">
                <div class="card-background">
                    <img class="card-bkimg" alt="" src="http://codegena.com/wp-content/uploads/2015/10/Background-Pattern-3.png">
                </div>
                <div class="useravatar">
                    <img alt="" src="https://www.vexels.com/media/users/3/141735/isolated/preview/f1e0f649e711910f0ef8b84742160df7-sporty-joyfull-man-by-vexels.png">
                </div>
                <div class="card-info">
                    @using (Html.BeginForm("UserProfile", "Administration"))
                    {
                        @Html.HiddenFor(userModel => userModel.User.UserName)
                        @Html.HiddenFor(userModel => userModel.User.Password)
                        @Html.HiddenFor(userModel => userModel.User.Email)
                        @Html.HiddenFor(userModel => userModel.User.Id)
                        @Html.HiddenFor(userModel => userModel.User.Address)
                        @Html.HiddenFor(userModel => userModel.User.Age)
                        @Html.HiddenFor(userModel => userModel.User.Difficulty)
                        @Html.HiddenFor(userModel => userModel.User.Height)
                        @Html.HiddenFor(userModel => userModel.User.Name)
                        @Html.HiddenFor(userModel => userModel.User.Surname)
                        @Html.HiddenFor(userModel => userModel.User.Weight)
                        <button type="submit" class="btn btn-primary">PROFILE</button>
                    }

                </div>
                <div class="card-info">
                    @using (Html.BeginForm("CreatePlan", "Administration"))
                    {
                        @Html.Hidden("roleId", Model.User.RoleId)

                        <button type="submit" class="btn btn-primary">PROFILE</button>
                    }

                </div>
                <div class="card-info">
                    @using (Html.BeginForm("EditPlan", "Administration"))
                    {
                    @Html.Hidden("roleId", Model.User.RoleId)

                    <button type="submit" class="btn btn-primary">PROFILE</button>
                    }
                </div>
            </div>
            <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button style="min-height: 5em" type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab">
                        <span class="glyphicon glyphicon-scale" aria-hidden="true"></span>
                        <div style="font-size: 2em"> Sport</div>
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button style="min-height: 5em" type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                        <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>
                        <div style="font-size: 2em"> Eat</div>
                    </button>
                </div>
            </div>
            <div class="well">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1">
                        @*<div>
                            <div class="row">
                                <p>@Model.User.Email</p>
                                <p>@Model.User.Password</p>
                                <p>@Model.User.UserName</p>
                                <p>@Model.User.Age</p>
                                <p>@Model.User.Height</p>
                                <p>@Model.User.Weight</p>
                                <p>@Model.User.Difficulty</p>
                            </div>
                        </div>*@
                        <div class="row">
                            @foreach (var item in Model.SportPlan)
                            {
                            <div class="col-sm-6 col-md-4" style="text-align: center">
                                <div class="thumbnail">
                                    <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                    <div class="caption">
                                        <h3>@item.Name</h3>
                                        <p>@item.Instructions</p>
                                        <p>@item.Reps</p>
                                        <p>
                                            @Html.ActionLink("Done", "UpdatePlan", "Sport", new { id = Model.User.Id, sportId = item.Id, lvl = item.Level }, new {@class = "btn btn-info"})
                                        </p>
                                        <p>@*<a href="#" class="btn btn-primary" role="button">Done</a>*@
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="tab2">
                        <div class="row">
                            @foreach (var item in Model.NutritionPlan)
                            {
                            <div class="col-sm-6 col-md-4" style="text-align: center">
                                <div class="thumbnail">
                                    <img src="@item.Image" alt="..." style="height: 200px; width: 200px">
                                    <div class="caption">
                                        <h3>@item.Name</h3>
                                        <p>@item.Calories kCal</p>
                                        <p>@item.Weight</p>
                                        <p>@item.Price</p>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="@Url.Content(" ~/Scripts/plan.js")"></script>
}
